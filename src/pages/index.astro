---
import Layout from "@/layouts/Layout.astro"
import AboutMe from "@/components/AboutMe.astro"
import Briefcase from "@/components/icons/Briefcase.astro"
import CodeIcon from "@/components/icons/Code.astro"
import ProfileCheck from "@/components/icons/ProfileCheck.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import Hero from "@/components/Hero.astro"
import Html from "@/components/icons/Html.astro"
import Css from "@/components/icons/Css.astro"
import Javascript from "@/components/icons/Javascript.astro"
import Postman from "@/components/icons/Postman.astro"
import MongoDB from "@/components/icons/MongoDB.astro"
import Express from "@/components/icons/Express.astro"
import New from "@/components/icons/New.astro"
import Git from "@/components/icons/Git.astro"
import GitHub from "@/components/icons/GitHub.astro"
import VisualStudio from "@/components/icons/VisualStudio.astro"
import Node from "@/components/icons/Node.astro"
import Npm from "@/components/icons/Npm.astro"
import Tailwind from "@/components/icons/Tailwind.astro"
import NewProfilecheck from "@/components/icons/NewProfilecheck.astro"
import LinkButton from "@/components/LinkButton.astro"
import Book from "@/components/icons/Book.astro"
import NewLinkButton from "@/components/NewLinkButton.astro"
import React from "@/components/icons/React.astro"
import Vite from "@/components/icons/Vite.astro"
import Projects2 from "@/components/Projects2.astro"
import TypeScript from "@/components/icons/TypeScript.astro"
import Nest from "@/components/icons/Nest.astro"
import Postgre from "@/components/icons/Postgre.astro"
import Swagger from "@/components/icons/Swagger.astro"
import TypeORM from "@/components/icons/TypeORM.astro"
import JWT from "@/components/icons/JWT.astro"
import Graduation from "@/components/icons/Graduation.astro"
import CertificateCard from "@/components/CertificateCard.astro"
import ExperienceItem from "@/components/ExperienceItem.astro"
import ContactForm from "@/components/ContactForm.astro"
import MailIc from "@/components/icons/Mail-ic.astro"
const certificados = [
  {
    img: '/Certificado Henry.png',
    label: 'Full Stack Developer',
    institution: 'Henry'
  },
  {
    img: '/JavascriptCertificate.png',
    label: 'JavaScript Algorithms and Data Structures',
    institution: 'freeCodeCamp'
  },
  {
    img: '/ResponsiveCertificate.png',
    label: 'Responsive Web Design',
    institution: 'freeCodeCamp'
  },
]
---

<Layout
  title="Tiago's Portfolio"
  description="Contrata a Tiago Isidro para crear tu pagina web. Desarrollador Web Full Stack. Especializado en Back End."
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero>
      </slot>
    </Hero>
    </SectionContainer>

<SectionContainer id="experiencia">
  <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white">
    <Graduation />
    Experiencia Académica
  </h2>
  <ExperienceItem
    title="Back End Developer"
    company="Henry Bootcamp · Proyecto Final"
    description="Desarrollé y lideré el backend de Train Up, una plataforma SaaS para gestión de gimnasios con más de 15 funcionalidades integradas. Participé activamente en el diseño e implementación de la arquitectura escalable con NestJS y TypeScript, el sistema de autenticación con roles, los pagos con Stripe y el almacenamiento en la nube, trabajando en conjunto con el equipo para asegurar calidad y consistencia en el código."
    date="Septiembre - Octubre 2025"
    link="https://front-amber-tau.vercel.app/"
  />
  
  <ExperienceItem
    title="Estudiante Full Stack"
    company="Henry Bootcamp"
    description="Bootcamp intensivo de más de 800 horas enfocado en el desarrollo web moderno. Formación práctica en JavaScript, React, Node.js, TypeScript, Express, PostgreSQL, metodologías ágiles (Scrum), entre otras. Completé más de 4 proyectos individuales y uno grupal, destacando por mi resolución de problemas, adaptabilidad y trabajo en equipo."
    date="Mayo - Octubre 2024"
  />
</SectionContainer>

    <SectionContainer id="proyectos">
      <h2
        class="flex items-center pt-14 mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects2 />
    </SectionContainer>

<SectionContainer>
  <h2
    class="flex items-center mb-6 text-3xl font-semibold gap-x-2 text-black/80 dark:text-white pt-20"
  >
    <ProfileCheck class="size-8" />
     Tecnologias & Herramientas
  </h2>

  <div class="flex flex-col items-center justify-center gap-y-10">
  <!-- Primera fila -->
  <div class="flex flex-wrap justify-center gap-10">
    {[
      { icon: Html, name: "HTML" },
      { icon: Css, name: "CSS" },
      { icon: Javascript, name: "Javascript" },
      { icon: TypeScript, name: "TypeScript" },
      { icon: Nest, name: "Nest" },
      { icon: Postgre, name: "PostgreSQL" },
      { icon: MongoDB, name: "MongoDB" },
      { icon: Express, name: "Express" },
      { icon: Swagger, name: "Swagger" },
      { icon: TypeORM, name: "TypeORM" },
      { icon: JWT, name: "JWT" },
      { icon: Git, name: "Git" },
      { icon: React, name: "React JS" },
      { icon: Postman, name: "Postman" },
    ].map(({ icon: Icon, name }) => (
      <div class="flex flex-col items-center">
        <Icon class="size-20" />
        <h2 class="text-center mt-2">{name}</h2>
      </div>
    ))}
  </div>

  <!-- Segunda fila -->
  <div class="flex flex-wrap justify-center gap-10">
    {[
      { icon: New, name: "Astro" },
      { icon: GitHub, name: "GitHub" },
      { icon: VisualStudio, name: "VS Code" },
      { icon: Node, name: "Node" },
      { icon: Npm, name: "Npm" },
      { icon: Tailwind, name: "Tailwind CSS" },
      { icon: Vite, name: "Vite JS" },
    ].map(({ icon: Icon, name }) => (
      <div class="flex flex-col items-center">
        <Icon class="size-20" />
        <h2 class="text-center mt-2">{name}</h2>
      </div>
    ))}
  </div>
</div>

</SectionContainer>

<SectionContainer id="sobre-mi">
  <h2
    class="flex items-center mb-6 text-3xl font-semibold gap-x-2 text-black/80 dark:text-white pt-16"
  >
    <NewProfilecheck class="size-8" />
    Sobre mí
  </h2>

  <AboutMe />

  <!-- Sección de Certificados agregada -->
  <div class="mt-20">
    <h2
      class="flex items-center mb-10 text-3xl font-semibold gap-x-2 text-black/80 dark:text-white"
    >
      <Book class="size-8" />
      Certificados
    </h2>
    
    <div class="flex w-full lg:max-w-[700px] mx-auto gap-5 flex-wrap justify-center">
      {certificados.map(cert => (
        <CertificateCard {...cert} />
      ))}
    </div>
  </div>
</SectionContainer>

  </div>

<SectionContainer id="contacto">
  <h2
    class="flex items-center mb-6 text-3xl font-semibold gap-x-2 text-black/80 dark:text-white pt-16"
  >
    <MailIc class="size-8" />
    Contacto
  </h2>
  
  <ContactForm />
</SectionContainer>

  </main>
</Layout>
