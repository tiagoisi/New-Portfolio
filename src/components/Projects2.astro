---
import LinkButton from "./LinkButton.astro"
import Html from "./icons/Html.astro"
import Css from "./icons/Css.astro"
import Javascript from "./icons/Javascript.astro"
import TypeScript from "./icons/TypeScript.astro"
import Nest from "./icons/Nest.astro"
import Postgre from "./icons/Postgre.astro"
import TypeORM from "./icons/TypeORM.astro"
import Swagger from "./icons/Swagger.astro"
import JWT from "./icons/JWT.astro"
import Web from "./icons/Web.astro"
import React from "./icons/React.astro"
import Tailwind from "./icons/Tailwind.astro"
import Vite from "./icons/Vite.astro"
import GitHub from "./icons/GitHub.astro"
import Express from "./icons/Express.astro"

const TAGS = {
  HTML: {
        name: "HTML",
        class: "bg-orange-900 text-white",
        icon: Html,
    },

  CSS: {
        name: "CSS",
        class: "bg-blue-900 text-white",
        icon: Css,
        },

  JAVASCRIPT: {
        name: "Javascript",
        class: "bg-yellow-900 text-white",
        icon: Javascript,
    },

  TYPESCRIPT: {
      name: "TypeScript",
      class: "bg-sky-900 bg-opacity-60 text-white",
      icon: TypeScript
    },

  NEST: {
      name: "NestJS",
      class: "bg-red-900 bg-opacity-60 text-white",
      icon: Nest
  },

  POSTGRE: {
    name: "PostgreSQL",
    class: "bg-sky-900 bg-opacity-60 text-white",
    icon: Postgre
  },

  EXPRESS: {
    name: "Express",
    class: "bg-gray-700 bg-opacity-60 text-white",
    icon: Express
  },

  TYPEORM: {
    name: "TypeORM",
    class: "bg-orange-900 bg-opacity-60 text-white",
    icon: TypeORM
  },

  SWAGGER: {
    name: "Swagger",
    class: "bg-green-900 bg-opacity-60 text-white",
    icon: Swagger
  },

  JWT: {
    name: "JWT",
    class: "bg-violet-900 bg-opacity-60 text-white",
    icon: JWT
  },

  REACT: {
        name: "React JS",
        class: "bg-sky-900 bg-opacity-60 text-white",
        icon: React,
    },

  TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-sky-900 bg-opacity-60 text-white",
        icon: Tailwind,
    },

  VITE: {
        name: "Vite JS",
        class: "bg-violet-900 bg-opacity-50 text-white",
        icon: Vite,
    },
}
const PROJECTS = [
{
    title: "API | BackEnd Eccommerce",
    description:
      "API REST para e-commerce desarrollada con NestJS y arquitectura modular. Implementa autenticación JWT basada en roles, CRUD completo de productos y pedidos, validaciones de negocio, relaciones complejas en PostgreSQL y documentación interactiva con Swagger.",
    github: "https://github.com/tiagoisi/ecommerce-tiagoisi",
    image: "/projects/API-Backend.webp",
    alt:'Imagen de API BackEnd cargando...',
    tags: [TAGS.TYPESCRIPT, TAGS.NEST, TAGS.TYPEORM, TAGS.JWT, TAGS.POSTGRE, TAGS.SWAGGER],
  },
  {
    title: "Steelcore - Gestor de Turnos",
    description:
      "Aplicación fullstack para gestión de turnos con autenticación completa (registro/login/logout). Implementa lógica de negocio para reservas con validaciones (horarios laborales, cancelación con 24hs de anticipación), persistencia en base de datos y manejo de sesiones de usuario.",
    github: "https://github.com/tiagoisi/gestor-turnos",
    image: "/projects/steelcore.webp",
    alt:'Imagen de Gestor de Turnos cargando...',
    tags: [TAGS.TYPESCRIPT, TAGS.TYPEORM, TAGS.EXPRESS, TAGS.POSTGRE, TAGS.REACT],
  },
  {
    title: "Brainwave - AI",
    description:
      "Landing page moderna con diseño futurista inspirado en plataformas de IA. Desarrollada con React y Tailwind CSS, destacando por animaciones fluidas, UI/UX contemporáneo y diseño responsive.",
    web: "https://brainwave-ia.netlify.app",
    image: "/projects/Brainwave.webp",
    alt:'Imagen de Brainwave AI cargando...',
    tags: [TAGS.REACT, TAGS.JAVASCRIPT, TAGS.TAILWIND, TAGS.VITE],
  },
  {
    title: "Spotify Clone - Music Player",
    description:
      "Clon funcional de Spotify con reproductor de audio completo. Incluye controles de reproducción (play/pause, skip), navegación por álbumes, gestión de estado para el reproductor y diseño pixel-perfect replicando la UI original.",
    web: "https://spotify-clone-ms.netlify.app",
    image: "/projects/spotify-clone.webp",
    alt:'Imagen de Spotify Clone cargando...',
    tags: [TAGS.REACT, TAGS.TAILWIND, TAGS.VITE],
  }
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, github, web, alt }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt={alt} class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" src={image} />
    </div>
  </div>
  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-col mt-2">
      <ul class="flex flex-row flex-wrap mb-2 gap-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 whitespace-nowrap`}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
        <footer class="flex items-end justify-start mt-4 gap-x-4">
          <LinkButton href={github || web}>
            {github ? <GitHub class="size-6" /> : <Web class="size-6" />}
            {github ? "Ver en GitHub" : "Visitar Web"}
          </LinkButton>
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>




